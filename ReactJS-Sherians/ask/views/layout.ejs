<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Jaunt Solutions Forum</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body class="bg-dark text-light">
  <!-- Navbar -->
  <header class="navbar navbar-expand-lg navbar-dark bg-black border-bottom border-secondary">
    <div class="container rounded">
      <a href="/" class="navbar-brand fw-bold">Jaunt Solutions</a>
      <nav class="ms-auto d-flex align-items-center gap-3">
        <% if (!currentUser) { %>
          <a class="btn btn-outline-light btn-sm" href="/login">Login</a>
          <a class="btn btn-light btn-sm text-dark" href="/register">Register</a>
        <% } else { %>
          <span class="text-secondary">Hi, <%= currentUser.username %> (<%= currentUser.role %>)</span>
          <form action="/logout" method="post" class="d-inline">
            <button type="submit" class="btn btn-sm btn-danger">Logout</button>
          </form>
        <% } %>
      </nav>
    </div>
  </header>

  <main class="container my-5">
    <%- body %>
  </main>

  <footer class="bg-black text-center text-secondary py-3 mt-5 border-top border-secondary">
    <small>&copy; <%= new Date().getFullYear() %> Jaunt Solutions Forum</small>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/forum.js"></script>
</body>
</html>
