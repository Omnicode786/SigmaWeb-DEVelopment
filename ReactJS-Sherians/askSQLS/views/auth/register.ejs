<section class="register-section d-flex justify-content-center align-items-center vh-100">
  <div class="register-card p-5 shadow-lg" data-aos="zoom-in">
    <h2 class="text-center stylish-font mb-4 text-white">Create Account</h2>
    <p class="text-center text-secondary mb-4">Join the discussion and share your thoughts</p>

    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger text-center stylish-font py-2 mb-4"><%= error %></div>
    <% } %>

    <form method="post" action="/register" class="d-flex flex-column gap-4">
      <div class="form-floating">
        <input type="text" name="username" id="username" class="form-control bg-transparent text-light border-0 border-bottom border-secondary stylish-font" required placeholder="Username">
        <label for="username" class="text-secondary">Username</label>
      </div>

      <div class="form-floating">
        <input type="password" name="password" id="password" class="form-control bg-transparent text-light border-0 border-bottom border-secondary stylish-font" required placeholder="Password">
        <label for="password" class="text-secondary">Password</label>
      </div>

      <div class="form-floating">
        <input type="text" name="adminCode" id="adminCode" class="form-control bg-transparent text-light border-0 border-bottom border-secondary stylish-font" placeholder="Admin Code (if any)">
        <label for="adminCode" class="text-secondary">Admin Code (optional)</label>
      </div>

      <button type="submit" class="btn btn-light stylish-font fw-semibold py-2 mt-3">Register</button>
    </form>

    <p class="text-center text-secondary mt-4 small">
      Already have an account? <a href="/login" class="text-decoration-none text-info">Login</a>
    </p>
  </div>
</section>

<style>
  body {
    background: linear-gradient(135deg, #0b0c10, #1c1e22);
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  }

  .stylish-font {
    letter-spacing: 0.3px;
  }

  .register-section {
    backdrop-filter: blur(10px);
  }

  .register-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 20px;
    width: 100%;
    max-width: 420px;
    transition: all 0.3s ease;
  }

  .register-card:hover {
    transform: scale(1.02);
    border-color: rgba(255, 255, 255, 0.25);
  }

  .form-floating label {
    color: rgba(255, 255, 255, 0.6);
  }

  .form-control {
    color: white !important;
    border-radius: 0;
    box-shadow: none !important;
  }

  .form-control:focus {
    border-color: white !important;
  }

  button.btn {
    border-radius: 10px;
    transition: all 0.3s ease;
  }

  button.btn:hover {
    background-color: white;
    color: black;
    transform: translateY(-2px);
  }

  .alert {
    background-color: rgba(255, 0, 0, 0.1);
    border: 1px solid rgba(255, 0, 0, 0.3);
    color: #ff7b7b;
    border-radius: 10px;
  }

  a.text-info:hover {
    color: white;
  }
</style>

<!-- Include AOS animations -->
<link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">
<script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
<script>
  AOS.init({ duration: 800, once: true });
</script>
